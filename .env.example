# Environment Configuration for PlanQuery
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://planquery:planquery_password@localhost:5432/planquery

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# API Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
ENVIRONMENT=development
DEBUG=true

# File Storage
UPLOAD_DIR=uploads
OUTPUT_DIR=output
INDEX_DIR=indices
MODELS_DIR=models
STATIC_DIR=static

# Processing Configuration
MAX_FILE_SIZE_MB=100
PDF_DPI=300

# OCR Configuration
TESSERACT_CONFIG=--psm 6
OCR_LANGUAGES=eng

# Model Configuration
LAYOUT_MODEL_TYPE=detectron2
LAYOUT_CONFIDENCE_THRESHOLD=0.5
TEXT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Search Configuration
VECTOR_WEIGHT=0.7
KEYWORD_WEIGHT=0.3
MAX_SEARCH_RESULTS=20

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/planquery.log

# Development
AUTO_RELOAD=true
PROFILING=false
